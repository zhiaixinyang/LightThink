<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 使用上边声明的属性 -->
    <declare-styleable name="MyHorinzontalProgressBarView">
        <attr name="myprogress_unreach_color" format="color" />
        <attr name="myprogress_unreach_height" format="dimension" />
        <attr name="myprogress_reach_color" format="color" />
        <attr name="myprogress_reach_height" format="dimension" />

        <attr name="myprogress_text_offset" format="dimension" />
        <attr name="myprogress_text_size" format="dimension" />
        <attr name="myprogress_text_color" format="color" />
    </declare-styleable>

    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SimpleRoundImageView">
        <attr name="simple_text_in_color" format="color" />
        <attr name="simple_text_in_size" format="dimension" />
        <attr name="simple_text_out_color" format="color" />
        <attr name="simple_text_out_size" format="dimension" />
        <attr name="simple_text_out" format="string" />
        <attr name="simple_text_in" format="string" />
        <attr name="simple_bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SwipeFlingAdapterView">
        <attr name="SwipeFlingStyle" format="reference" />
        <attr name="rotation_degrees" format="float" />
        <attr name="min_adapter_stack" format="integer" />
        <attr name="max_visible" format="integer" />
    </declare-styleable>

    <!-- 颜色选择器 -->
    <declare-styleable name="ColorPickerView">
        <attr name="cp_src" format="reference" />
        <attr name="cp_selector" format="reference" />
    </declare-styleable>

    <!-- 特殊动画 -->
    <declare-styleable name="refresh">
        <attr name="refresh_line_color" format="color" />
        <attr name="refresh_line_width" format="integer" />
    </declare-styleable>
    <!-- Item侧滑删除效果 -->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <!-- 多选，单选的Layout -->
    <declare-styleable name="FlowLayoutItemTags">
        <attr name="item_backgroundColor" format="reference|color" />
        <attr name="item_selectedBackgroundColor" format="reference|color" />

        <attr name="item_horizontalSpacing" format="dimension" />
        <attr name="item_verticalSpacing" format="dimension" />
        <attr name="item_horizontalPadding" format="dimension" />
        <attr name="item_verticalPadding" format="dimension" />

        <attr name="item_textColor" format="color" />
        <attr name="item_selectedTextColor" format="reference|color" />
        <attr name="item_textSize" format="dimension" />


        <!-- 边框圆角半径-->
        <attr name="item_radius" format="dimension" />
        <attr name="item_bottomLeftRadius" format="dimension" />
        <attr name="item_bottomRightRadius" format="dimension" />
        <attr name="item_topLeftRadius" format="dimension" />
        <attr name="item_topRightRadius" format="dimension" />
        <!-- 边框颜色-->
        <attr name="item_strokeColor" format="reference|color" />
        <attr name="item_selectedStrokeColor" format="reference|color" />
        <!-- 边框宽度-->
        <attr name="item_strokeWidth" format="dimension" />
        <!-- 是否多选-->
        <attr name="item_flowChooseable" format="boolean" />
        <attr name="item_singleLine" format="boolean" />

        <!--单位dp,为了适应wrap_content用integer-->
        <attr name="item_width" format="integer|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="item_height" format="integer|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="item_maxEms" format="integer" />
    </declare-styleable>

    <!-- 和上面的为一体 -->
    <declare-styleable name="Themes">
        <attr name="FlowLayoutTagsStyle" format="reference" />
    </declare-styleable>

    <!-- 折叠式TextView -->
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="contentTextSize" format="dimension" />
        <attr name="contentTextColor" format="color" />
        <attr name="expandDrawable" format="reference" />
        <attr name="expandText" format="string" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="collapseText" format="string" />
        <attr name="expandCollapseTextColor" format="color" />
        <attr name="DrawableAndTextGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!-- Switch按钮 -->
    <declare-styleable name="IconSwitch">
        <attr name="isw_icon_left" format="reference" />
        <attr name="isw_icon_right" format="reference" />

        <attr name="isw_icon_size" format="dimension" />

        <attr name="isw_background_color" format="color" />
        <attr name="isw_thumb_color_left" format="color" />
        <attr name="isw_thumb_color_right" format="color" />
        <attr name="isw_inactive_tint_icon_left" format="color" />
        <attr name="isw_inactive_tint_icon_right" format="color" />
        <attr name="isw_active_tint_icon_left" format="color" />
        <attr name="isw_active_tint_icon_right" format="color" />

        <attr name="isw_default_selection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DottedView">
        <attr name="dv_line_color" format="color" />
        <attr name="dv_line_height" format="dimension" />
        <attr name="dv_line_width" format="dimension" />
        <attr name="dv_line_interval" format="dimension" />
    </declare-styleable>

    <!--阿里开源的ViewPager-->
    <declare-styleable name="UltraViewPager">
        <attr name="upv_autoscroll" format="integer" />
        <attr name="upv_infiniteloop" format="boolean" />
        <attr name="upv_ratio" format="float" />
        <attr name="upv_scrollmode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="upv_disablescroll" format="enum">
            <enum name="none" value="0" />
            <enum name="backward" value="1" />
            <enum name="forward" value="2" />
        </attr>
        <attr name="upv_multiscreen" format="boolean" />
        <attr name="upv_automeasure" format="boolean" />
        <attr name="upv_itemratio" format="float" />
    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="vtv_textColor" format="color" />
        <attr name="vtv_textSize" format="dimension" />
    </declare-styleable>
</resources>