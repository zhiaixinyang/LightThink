<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:honor="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/register"
    android:layout_height="match_parent">
    <com.example.greatbook.widght.CircleImageView
        android:id="@+id/iv_avatar"
        android:src="@drawable/no_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        honor:civ_border_width="1dp"
        honor:civ_border_color="@color/white" />

    <EditText
        android:layout_below="@+id/iv_avatar"
        android:id="@+id/et_account"
        android:textSize="@dimen/login_size"
        android:hint="账号"
        android:background="@drawable/round_trans_gray"
        android:layout_marginTop="@dimen/login_m_h_tb"
        android:paddingBottom="@dimen/login_p_h_tb"
        android:paddingLeft="@dimen/login_p_w_lr"
        android:paddingRight="@dimen/login_p_w_lr"
        android:paddingTop="@dimen/login_p_h_tb"
        android:layout_marginRight="@dimen/login_m_w_lr"
        android:layout_marginLeft="@dimen/login_m_w_lr"
        android:layout_marginBottom="@dimen/login_m_h_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_password"
        android:textSize="@dimen/login_size"
        android:hint="密码"
        android:layout_below="@+id/et_account"
        android:background="@drawable/round_trans_gray"
        android:paddingBottom="@dimen/login_p_h_tb"
        android:paddingLeft="@dimen/login_p_w_lr"
        android:paddingRight="@dimen/login_p_w_lr"
        android:paddingTop="@dimen/login_p_h_tb"
        android:inputType="textPassword"
        android:layout_marginRight="@dimen/login_m_w_lr"
        android:layout_marginLeft="@dimen/login_m_w_lr"
        android:layout_marginBottom="@dimen/login_m_w_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_name"
        android:textSize="@dimen/login_size"
        android:hint="昵称"
        android:layout_below="@+id/et_password"
        android:background="@drawable/round_trans_gray"
        android:paddingBottom="@dimen/login_p_h_tb"
        android:paddingLeft="@dimen/login_p_w_lr"
        android:paddingRight="@dimen/login_p_w_lr"
        android:paddingTop="@dimen/login_p_h_tb"
        android:layout_marginRight="@dimen/login_m_w_lr"
        android:layout_marginLeft="@dimen/login_m_w_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:textSize="@dimen/login_size"
        android:layout_alignParentBottom="true"
        android:text="注册并登陆"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:paddingBottom="@dimen/login_p_h_tb"
        android:paddingLeft="@dimen/login_p_w_lr"
        android:paddingRight="@dimen/login_p_w_lr"
        android:paddingTop="@dimen/login_p_h_tb"
        android:layout_marginRight="@dimen/login_m_w_lr"
        android:layout_marginLeft="@dimen/login_m_w_lr"
        android:gravity="center"
        android:background="@drawable/round_trans"
        android:layout_height="wrap_content" />

</RelativeLayout>