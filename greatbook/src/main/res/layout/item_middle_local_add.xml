<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <!--<ImageView-->
        <!--android:id="@+id/iv_label"-->
        <!--android:src="@drawable/icon_label_red"-->
        <!--android:scaleType="fitXY"-->
        <!--android:layout_width="@dimen/item_middle_local_add_iv_wh"-->
        <!--android:layout_marginBottom="@dimen/item_middle_local_add_margin"-->
        <!--android:layout_height="30dp" />-->
    <TextView
        android:id="@+id/tv_group_title"
        android:layout_width="wrap_content"
        android:text="分组信息"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:padding="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_middle_local_add_margin"
        android:layout_marginTop="@dimen/item_middle_local_add_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_title"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/item_middle_local_add_margin"
        android:layout_marginBottom="@dimen/item_middle_local_add_margin"
        android:layout_marginTop="@dimen/item_middle_local_add_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:text="内容"
        android:layout_marginBottom="@dimen/item_middle_local_add_margin"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time"
        android:text="时间"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content"
        android:layout_marginRight="@dimen/item_middle_local_add_margin"
        android:layout_marginBottom="@dimen/item_middle_local_add_margin"
        android:layout_marginTop="@dimen/item_middle_local_add_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/item_middle_local_add_margin"
        android:background="@color/gray_light"/>
</RelativeLayout>