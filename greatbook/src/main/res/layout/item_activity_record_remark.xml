<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_height="wrap_content">
        <com.example.greatbook.widght.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_marginTop="@dimen/item_activity_record_remark_margin"
            android:layout_marginLeft="@dimen/item_activity_record_remark_margin"
            android:layout_marginBottom="@dimen/activity_record_remark_bottom_margin"
            android:layout_width="@dimen/item_activity_record_remark_avatar_wh"
            android:src="@drawable/no_avatar"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            android:layout_height="@dimen/item_activity_record_remark_avatar_wh" />
        <TextView
            android:id="@+id/tv_nick"
            android:text="昵称"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/item_activity_record_remark_margin"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:text="时间"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginRight="@dimen/item_activity_record_remark_margin"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:maxLines="4"
        android:text="内容"
        android:textColor="@color/light_black"
        android:textSize="16sp"
        android:layout_marginLeft="51dp"
        android:layout_below="@+id/top"
        android:layout_marginRight="@dimen/item_activity_record_remark_margin"
        android:layout_marginBottom="@dimen/item_activity_record_remark_margin"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/item_activity_record_remark_margin"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="51dp"
        android:background="@color/gray_light"/>
</RelativeLayout>