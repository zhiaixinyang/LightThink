<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="130dp"
    android:layout_marginBottom="@dimen/item_rlv_discovery_top_margin"
    android:layout_marginRight="@dimen/item_rlv_discovery_top_margin"
    android:background="@drawable/item_rlv_discovery_top_bg">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_rlv_discovery_top_margin"
        android:gravity="center|left"
        android:orientation="horizontal">

        <com.example.greatbook.widght.CircleImageView
            android:id="@+id/iv_discovery_top_user_avatar"
            android:layout_width="@dimen/item_rlv_discovery_top_iv_w_h"
            android:layout_height="@dimen/item_rlv_discovery_top_iv_w_h"
            android:layout_marginLeft="@dimen/item_rlv_discovery_top_margin"
            android:src="@drawable/no_avatar" />

        <TextView
            android:id="@+id/tv_discovery_top_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_rlv_discovery_top_margin"
            android:text="用户"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_discovery_top_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/item_rlv_discovery_top_margin"
        android:layout_marginRight="@dimen/item_rlv_discovery_top_margin"
        android:text="文集名称"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <com.example.greatbook.widght.RoundImageView
        android:id="@+id/iv_group"
        android:layout_width="@dimen/item_rlv_discovery_top_iv_group_w_h"
        android:layout_height="@dimen/item_rlv_discovery_top_iv_group_w_h"
        android:layout_below="@+id/tv_discovery_top_group_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/item_rlv_discovery_top_margin"
        android:src="@drawable/pictures_no"
        app:borderRadius="@dimen/dp_4"
        app:type="round" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_rlv_discovery_top_iv_w_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/item_rlv_discovery_top_margin"
        android:layout_marginRight="@dimen/item_rlv_discovery_top_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/item_rlv_discovery_top_num_iv_w_h"
            android:layout_height="@dimen/item_rlv_discovery_top_num_iv_w_h"
            android:src="@drawable/btn_collect_on" />

        <TextView
            android:id="@+id/tv_discovery_top_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="99+"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>