<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_marginRight="@dimen/item_rlv_discovery_top_margin"
    android:layout_marginBottom="@dimen/item_rlv_discovery_top_margin"
    android:background="@drawable/item_rlv_discovery_top_bg"
    android:layout_height="140dp">
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/item_rlv_discovery_top_margin"
        android:gravity="center|left"
        android:layout_height="wrap_content">
        <View
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/item_rlv_discovery_top_margin"
            android:layout_width="@dimen/item_rlv_discovery_top_iv_w_h"
            android:layout_height="@dimen/item_rlv_discovery_top_iv_w_h" />
        <View
            android:id="@+id/tv_discovery_top_user_name"
            android:text="用户"
            android:textColor="@color/purple"
            android:layout_marginLeft="@dimen/item_rlv_discovery_top_margin"
            android:layout_width="40dp"
            android:background="@color/gray"
            android:layout_height="20dp" />
    </LinearLayout>
    <View
        android:id="@+id/tv_discovery_top_group_name"
        android:layout_width="80dp"
        android:text="文集名称"
        android:layout_below="@+id/topPanel"
        android:layout_marginLeft="@dimen/item_rlv_discovery_top_margin"
        android:layout_marginRight="@dimen/item_rlv_discovery_top_margin"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_height="20dp" />
    <View
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_rlv_discovery_top_margin"
        android:background="@color/gray"
        android:layout_width="@dimen/item_rlv_discovery_top_iv_w_h"
        android:layout_height="@dimen/item_rlv_discovery_top_iv_w_h"/>

</RelativeLayout>